<!DOCTYPE html>
<html>
  <head>
    <title>Relogio</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>    
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>    
  </head>

  <body>
    <!-- Barra de Navegação -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container">
        <a class="navbar-brand" href="#">Relógio & Cronômetro</a>
        <div class="collapse navbar-collapse">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <%= link_to 'Relógio', timers_digital_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Cronômetro', timers_clock_path, class: 'nav-link' %>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <div class="container mt-5">
      <%= yield %>
    </div>
    
  </body>
</html>
